journal = {Psychology of Sport and Exercise},
month = jan,
number = {1},
pages = {168--174},
title = {{The rewarding effect of flow experience on performance in a marathon race}},
url = {http://linkinghub.elsevier.com/retrieve/pii/S1469029208000563},
volume = {10},
year = {2009}
}
