isbn = {0042101014159},
issn = {14396319},
journal = {European Journal of Applied Physiology},
keywords = {Bland-Altman plot,Endurance training,Fast Fourier transform,Heart rate,Heart rate variability,Limits of agreement,Mobile heart rate monitor,Polar S810,RR intervals,Suunto t6,Wavelet transform},
number = {4},
pages = {779--786},
pmid = {20225081},
title = {{Comparison of three mobile devices for measuring R-R intervals and heart rate variability: Polar S810i, Suunto t6 and an ambulatory ECG system}},
